{
  "manifest_version": 2,

  "name": "WP Scratchpad",
  "description": "Easily create draft posts on WordPress sites you have access to.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Access WP Scratchpad"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-GCE6cmABJXu1EEwMpgBKTuTJyTrX/cXTZ/Z3o5KrUYM='; object-src 'self'",
  "permissions": [
    "https://*/"
  ]
}